{% extends 'base.html.twig' %}

{% block title %}myVideoPlayer ||
	{{ video.title }}
{% endblock %}

{% block body %}
	<div class="row p-5 mt-3 mb-2 text-center bg-light rounded border">
		<h2>{{ video.title }}</h1>
	</div>
	<div class="row p-1 pt-2 mb-2 bg-light rounded border">
		<div>{{ video.url|video_player|raw}}</div>
	</div>
	<div class="row p-5 mb-2 bg-light rounded border">
		<div>
			<b>Auteur :
			</b>
			{{ video.author}}</div>
		{% if video.authorLink %}
			<div>
				<b>Visiter le site de l'auteur :
				</b>
				<a class="btn btn-primary mr-3" href="{{video.authorLink}}" target="_blank" title="{{ video.author }}">
					<i class="fas fa-eye"></i>
					Découvrir
				</a>
			</div>
		{% endif %}
	</div>
	<div class="row p-5 mb-5 bg-light rounded border">
		<div>
			<b>Description :</b>
			{{video.description|raw}}</div>
	</div>
	<div class="row pt-3 pb-3 mb-5">
		<a class="btn btn-dark col-2 rounded-lg shadow" href="{{ path('category_show', {'slug': video.category.slug}) }}" title="Retour à la page catégorie {{video.category.slug}}">Retour</a>
	</div>
{% endblock %}
