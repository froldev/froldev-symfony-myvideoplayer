{% extends 'base.html.twig' %}

{% block title %}Video index
{% endblock %}

{% block body %}
	<div class="d-grid gap-3">
		<div class="row p2 mx-auto">
			<h1>Liste des vidéos</h1>
		</div>
		<div class="row p2">
			<h2>Ajouter une vidéo :
			</h2>
			<a class="btn btn-primary col-2 mx-auto" href="{{ path('video_new') }}">Ajouter une vidéo</a>
		</div>
		<div class="row p2">
			<h2>Vidéos :
			</h2>

			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Titre</th>
						<th scope="col">Catégorie</th>
						<th scope="col">Auteur</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for video in videos %}
						<tr>
							<td>{{video.name|capitalize}}</td>
							<td>{{video.category.name|capitalize}}</td>
							<td>{{video.author|capitalize}}</td>
							<td class="d-flex">
								<a class="btn mx-3" href="{{ path('video_edit', {'slug': video.slug}) }}">
									<i class="fas fa-edit fa-lg text-success"></i>
								</a>
								{{ include('video/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td>Aucune vidéo</td>
						</tr>
					</p>
				</tbody>
			</div>
		{% endfor %}
	</tbody>
</table></div></div>{% endblock %}
