{% extends 'base.html.twig' %}

{% block title %}myVideoPlayer || Liste des catégories
{% endblock %}

{% block body %}
	<div class="d-grid gap-3">
		<div class="row p2 mx-auto">
			<h1>Liste des Catégories</h1>
		</div>
		<div class="row p2">
			<h2>Ajouter une catégorie</h2>
			<a class="btn btn-primary col-2 mx-auto" href="{{ path('category_new') }}">Ajouter une catégorie</a>
		</div>
		<div class="row p2">
			<h2>Catégorie</h2>
			{% for category in categories %}
				<div class="card col-lg-4 cold-md-6 col-sm-12 bg-dark text-white">
					<img src="{{ category.picture }}" class="card-img" alt="{{ category.name }}">
					<div class="card-img-overlay">
						<h3 class="card-title">{{ category.name|upper }}</h5>
						<a href="{{ path('category_edit', {'id': category.id}) }}" class="card-link btn btn-success">Modifier</a>
						<a href="#" class="card-link btn btn-danger">Supprimer</a>
					</div>
				</div>
			{% else %}
				<div class="col-12">
					<p>Aucune catégorie</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
