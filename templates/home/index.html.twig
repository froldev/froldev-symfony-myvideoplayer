{% extends 'base.html.twig' %}

{% block title %}myVideoPlayer || Accueil
{% endblock %}

{% block body %}
	<div class="d-grid gap-3">

		{% if categories|length > 0 %}
			<div class="row mb-3 p2 mx-auto">
				<div id="carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
					<div class="carousel-indicators">
						{% for key, category in categories %}
							<button type="button" data-bs-target="#carousel" data-bs-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %} aria-current="true" aria-label="Slide {{ key + 1 }}"></button>
						{% endfor %}
					</div>
					<div class="carousel-inner">
						{% for key, category in categories %}
							<div class="carousel-item {% if key == 0 %}active{% endif %}">
								<img src="{{ vich_uploader_asset(category) }}" class="d-block w-100" height="400" alt="{{ category.name}}" loading="lazy">
								<div class="carousel-caption d-none d-md-block">
									<h3 class="bg-secondary p-2">{{ category.name|upper }}</h3>
								</div>
							</div>
						{% endfor %}
					</div>
					{% if categories|length > 1 %}
						<button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					{% endif %}
				</div>
			</div>
		{% endif %}

		<div class="row p2">
			<h2>Chercher une vidéo</h2>
		</div>

		<div class="row p2">
			<h2>Les meilleures vidéos</h2>
		</div>
	</div>
{% endblock %}
